<body>

<!-- Image and text -->
<nav class="navbar navbar-primary fixed-top bg-dark">
  <a class="navbar-brand text-white justify-items-center" href="#">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRl7TEKfhRnFhg0m9L9tvyI_VRkIqE5wXfd8w&usqp=CAU" 
    width="60px" height="60px" class="d-inline-block align-top img-thumbnail img-fluid" alt="">
    Welcome! If you've read an interesting article recently, please share it.
  </a>
</nav>


   <div class="container">
        <h1 class="mb-4 text-white">Articles</h1>
        <a href="/articles/new" class="btn btn-success">Post A New Article</a>

        <% articles.forEach(article => { %>
            <div class="card mt-4">
            <div class="card-body">
              <h4 class="card-title"> <%= article.title %> </h4>
              <div class="card-subtitle text-muted mb-2">
                <%= article.createdAt.toLocaleDateString() %>
                <%= article.createdAt.toLocaleTimeString() %>
              </div>
              <div class="card-text mb-2"><%= article.description %></div>
              <a href="/articles/<%= article.slug %>"
              class="btn btn-primary">Read More</a>
              <a href="/articles/edit/<%= article.id %>"
              class="btn btn-warning">Edit</a>
              <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            </div>
       <% }) %>
   </div>

